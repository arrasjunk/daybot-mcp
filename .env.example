# Alpaca API Configuration (Required)
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Polygon.io API Configuration (optional backup data source)
POLYGON_API_KEY=your_polygon_api_key_here
ENABLE_POLYGON_BACKUP=false

# Risk Management Settings
# Maximum position size as percentage of portfolio (0.02 = 2%)
MAX_POSITION_SIZE=0.02

# Maximum daily loss as percentage of portfolio (0.05 = 5%)
MAX_DAILY_LOSS=0.05

# Default stop loss percentage (0.02 = 2%)
DEFAULT_STOP_LOSS=0.02

# Default take profit percentage (0.04 = 4%)
DEFAULT_TAKE_PROFIT=0.04

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=false

# Trading Configuration
# Buffer time in minutes after market open before trading
MARKET_OPEN_BUFFER=5

# Buffer time in minutes before market close to stop trading
MARKET_CLOSE_BUFFER=15

# Adaptive Sizing (Optional)
# Default fraction of portfolio risked per trade (separate from stop-loss %) 
DEFAULT_RISK_PER_TRADE=0.01

# Sizing mode: fixed|volatility|kelly|conviction|hybrid
RISK_SIZING_MODE=fixed

# Kelly sizing controls
FRACTIONAL_KELLY_MULTIPLIER=0.5
KELLY_CAP=0.2
HYBRID_KELLY_WEIGHT=0.3

# Global risk bounds
RISK_FLOOR=0.002
RISK_CEILING=0.02

# Conviction scaling
CONVICTION_MIN_MULTIPLIER=0.5
CONVICTION_MAX_MULTIPLIER=1.5

# Portfolio heat scaling
HEAT_SCALING_ENABLED=true
HEAT_MIN_MULTIPLIER=0.3

# Volatility regime multipliers
LOW_VOLATILITY_MULTIPLIER=1.2
HIGH_VOLATILITY_MULTIPLIER=0.7
