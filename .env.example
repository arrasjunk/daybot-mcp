# Alpaca API Configuration (Required)
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Alpaca Base URL
# Paper Trading (recommended for testing): https://paper-api.alpaca.markets
# Live Trading (use with caution): https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Risk Management Settings
# Maximum position size as percentage of portfolio (0.02 = 2%)
MAX_POSITION_SIZE=0.02

# Maximum daily loss as percentage of portfolio (0.05 = 5%)
MAX_DAILY_LOSS=0.05

# Default stop loss percentage (0.02 = 2%)
DEFAULT_STOP_LOSS=0.02

# Default take profit percentage (0.04 = 4%)
DEFAULT_TAKE_PROFIT=0.04

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=false

# Trading Configuration
# Buffer time in minutes after market open before trading
MARKET_OPEN_BUFFER=5

# Buffer time in minutes before market close to stop trading
MARKET_CLOSE_BUFFER=15
